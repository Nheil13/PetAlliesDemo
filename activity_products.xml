<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f3f3f3"
    tools:context=".Products">

    <ScrollView
        android:id="@+id/scrollViewSection"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        tools:layout_editor_absoluteX="0dp">

        <!-- Content Starts Here -->
        <LinearLayout
            android:id="@+id/MainContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Header Banner -->
            <LinearLayout
                android:id="@+id/headerBanner"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@drawable/top_background"
                android:orientation="vertical">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="89dp"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginEnd="24dp">

                    <TextView
                        android:id="@+id/textView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:fontFamily="@font/anton"
                        android:text="@string/product_activity_title"
                        android:textColor="@color/white"
                        android:textSize="30sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </LinearLayout>

            <!-- Content Starts Here -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="720dp"
                    android:layout_marginBottom="20dp">

                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:fontFamily="@font/anton"
                        android:padding="10dp"
                        android:text="@string/categories"
                        android:textAllCaps="true"
                        android:textSize="30sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <!-- Cat and Kittens Product Button -->
                    <RelativeLayout
                        android:id="@+id/catKittens"
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        app:layout_constraintTop_toBottomOf="@id/textView2">

                        <com.google.android.material.imageview.ShapeableImageView
                            android:id="@+id/cat_category"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/round_image"
                            android:scaleType="centerCrop"
                            android:tag="https://drive.google.com/uc?id=1aYV-JHUhFvu6Jcttcu5c0jpdYQ7oWA8Z"
                            app:shapeAppearanceOverlay="@style/roundImageView"
                            android:clickable="true"
                            android:focusable="true"
                            android:contentDescription="@string/image_description_cat"/>

                        <Button
                            android:id="@+id/catKittensButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_marginBottom="6dp"
                            android:layout_marginStart="10dp"
                            android:background="#00000000"
                            android:padding="5dp"
                            android:contentDescription="@string/button_description_cat"
                            android:text="@string/click_here_cat"
                            android:textColor="#00000000"
                            android:labelFor="@id/catKittens"/>

                    </RelativeLayout>

                    <!-- Dog and Puppies Product Button -->
                    <RelativeLayout
                        android:id="@+id/dogPuppies"
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        app:layout_constraintTop_toBottomOf="@id/catKittens">

                        <com.google.android.material.imageview.ShapeableImageView
                            android:id="@+id/dog_category"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/round_image"
                            android:scaleType="centerCrop"
                            android:tag="https://drive.google.com/uc?id=1NpmP3_uO2KRWD168Ngr3ErsZxL0CSEwz"
                            app:shapeAppearanceOverlay="@style/roundImageView"
                            android:clickable="true"
                            android:focusable="true"/>

                        <Button
                            android:id="@+id/dogPuppiesButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_marginBottom="6dp"
                            android:layout_marginStart="10dp"
                            android:background="#00000000"
                            android:padding="5dp" />

                    </RelativeLayout>

                    <!-- Vitamins and Supplements Product Button -->
                    <RelativeLayout
                        android:id="@+id/vitaminSupplement"
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        app:layout_constraintTop_toBottomOf="@id/dogPuppies">

                        <com.google.android.material.imageview.ShapeableImageView
                            android:id="@+id/vitaminSupplement_category"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/round_image"
                            android:scaleType="centerCrop"
                            android:tag="https://drive.google.com/uc?id=1Px6_OMe0631zHgspNgJChcpZMd5xY9lG"
                            app:shapeAppearanceOverlay="@style/roundImageView"
                            android:clickable="true"
                            android:focusable="true" />

                        <Button
                            android:id="@+id/vitaminSupplementButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_marginBottom="6dp"
                            android:layout_marginStart="10dp"
                            android:background="#00000000"
                            android:padding="5dp" />

                    </RelativeLayout>

                    <!-- Vitamins and Supplements Product Button -->
                    <RelativeLayout
                        android:id="@+id/otherEssentials"
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        app:layout_constraintTop_toBottomOf="@id/vitaminSupplement">

                        <com.google.android.material.imageview.ShapeableImageView
                            android:id="@+id/otherEssentials_category"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/round_image"
                            android:scaleType="centerCrop"
                            android:tag="https://drive.google.com/uc?id=1Mq-UkgwUZD821bzvfMyWM4Ni0j3D7H1L"
                            app:shapeAppearanceOverlay="@style/roundImageView"
                            android:clickable="true"
                            android:focusable="true" />

                        <Button
                            android:id="@+id/otherEssentialsButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_marginBottom="6dp"
                            android:layout_marginStart="10dp"
                            android:background="#00000000"
                            android:padding="5dp" />

                    </RelativeLayout>


                </androidx.constraintlayout.widget.ConstraintLayout>

            </LinearLayout>

        </LinearLayout>


    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>